{
    "name": "djinnjs",
    "version": "0.3.0",
    "description": "DjinnJS is a lightweight JavaScript & CSS bootstraper built on ES Modules and Web Components.",
    "author": "Pageworks",
    "license": "GPL-3.0",
    "keywords": [
        "progressive-enhancement",
        "es-modules",
        "web-components"
    ],
    "bugs": {
        "url": "https://github.com/Pageworks/djinnjs/issues"
    },
    "homepage": "https://djinnjs.com/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Pageworks/djinnjs.git"
    },
    "bin": {
        "djinnjs": "./cli/cli.js"
    },
    "engines": {
        "node": ">=10.16.0"
    },
    "main": "cli/cli.js",
    "files": [
        "cli",
        "dist",
        "actor.js",
        "actor.d.ts",
        "broadcaster.js",
        "boradcaster.d.ts",
        "broadcaster-worker.min.js",
        "env.js",
        "env.d.ts",
        "fetch.js",
        "fetch.d.ts"
    ],
    "scripts": {
        "prettier": "prettier --write \"src/**/*.ts\"",
        "eslint": "eslint -c .eslintrc.js src/**/*.ts",
        "lint": "npm run prettier && npm run eslint",
        "cleanup": "node ./build/cleanup.js",
        "relocate": "node ./relocate.js",
        "compile": "npm run cleanup && tsc && npm run relocate",
        "prerelease": "npm run cleanup && npm run prettier && npm run eslint && tsc && npm run relocate",
        "unpack": "snowpack",
        "tsc": "tsc",
        "docs": "docs",
        "predeploy": "docs -o ./public -c ./CNAME",
        "deploy": "node ./build/deploy.js"
    },
    "devDependencies": {
        "@codewithkyle/dev-docs": "^0.1.13",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "dotenv": "^8.2.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "prettier": "1.19.1",
        "snowpack": "^1.7.1",
        "typescript": "^3.9.7"
    },
    "dependencies": {
        "gh-pages": "^2.2.0",
        "ora": "^4.1.1",
        "rimraf": "^3.0.2",
        "semver": "^7.3.2",
        "terser": "^4.8.0",
        "update-notifier": "^4.1.3",
        "wwibs": "^0.1.2",
        "yargs": "^15.4.1"
    },
    "snowpack": {
        "webDependencies": [
            "wwibs"
        ]
    },
    "devDocs": {
        "name": "DjinnJS",
        "links": [
            {
                "label": "GitHub",
                "url": "https://github.com/Pageworks/djinnjs"
            },
            {
                "label": "NPM",
                "url": "https://www.npmjs.com/package/djinnjs"
            }
        ]
    }
}
