        "@typescript-eslint/parser": "^2.11.0",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.2",
        "prettier": "1.19.1",
        "rollup": "^1.27.13",
